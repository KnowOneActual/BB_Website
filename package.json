{
  "name": "beaubremer-weather-bot",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:css": "tailwindcss -i ./src/input.css -o ./style.css",
    "build:css:minify": "tailwindcss -i ./src/input.css -o ./style.css --minify",
    "build:css:silent": "BROWSERSLIST_IGNORE_OLD_DATA=1 tailwindcss -i ./src/input.css -o ./style.css",
    "update-browsers": "npx browserslist@latest --update-db",
    "postinstall": "npx update-browserslist-db@latest"
  },
  "dependencies": {
    "glob": "^13.0.6",
    "node-fetch": "^2.7.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "js-yaml": "^4.1.1",
    "netlify-cli": "^23.15.1",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.19"
  }
}
